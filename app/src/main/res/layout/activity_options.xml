<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ostrenkov.artem.vb42.Options">


    <EditText
        android:id="@+id/edSpeedRate"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:text="SPEEDRATE"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edVoicePitch" />

    <EditText
        android:id="@+id/edVoicePitch"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginTop="153dp"
        android:text="Pitch"
        app:layout_constraintTop_toBottomOf="@+id/edURL3"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bPitch"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:onClick="onClickPitch"
        android:text="Pich"
        app:layout_constraintLeft_toRightOf="@+id/edVoicePitch"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/bURL4" />

    <Button
        android:id="@+id/bSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:onClick="onClickSPEED"
        android:text="Speed"
        app:layout_constraintLeft_toRightOf="@+id/edSpeedRate"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bPitch" />

    <EditText
        android:id="@+id/edURl1"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:text="URL1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <Button
        android:id="@+id/bURL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:onClick="onClickApplyURL1"
        android:text="apply 1"

        app:layout_constraintLeft_toRightOf="@+id/edURl1"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/edURL2"
        android:layout_width="257dp"
        android:layout_height="50dp"
        android:text="URL2"

        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edURl1" />

    <Button
        android:id="@+id/bURL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"


        android:onClick="onClickApplyURL2"
        android:text="Apply 2"
        app:layout_constraintLeft_toRightOf="@+id/edURL2"
        app:layout_constraintTop_toBottomOf="@+id/bURL1" />

    <Button
        android:id="@+id/bURL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:onClick="onClickApplyURL2"
        android:text="Apply 3"
        app:layout_constraintLeft_toRightOf="@+id/edURL3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/bURL2" />

    <EditText
        android:id="@+id/edURL3"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="URL3"
        app:layout_constraintTop_toBottomOf="@+id/edURL2"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edURL4"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="URL4"
        app:layout_constraintTop_toBottomOf="@+id/edURL3"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bURL4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickApplyURL2"
        android:text="Apply 4"
        app:layout_constraintLeft_toRightOf="@+id/edURL4"
        app:layout_constraintTop_toBottomOf="@+id/bURL3" />

    <TextView
        android:id="@+id/twUserID"
        android:layout_width="159dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:text="UserID = ???"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edVoicePitch"
        app:layout_constraintTop_toBottomOf="@+id/edURL4"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="288dp" />

</android.support.constraint.ConstraintLayout>
