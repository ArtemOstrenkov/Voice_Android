<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/verL">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добрый день, что вы хотите подобрать?"
            android:visibility="invisible" />


        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="150pt"
            android:scrollbars="vertical"
            android:fillViewport="true">



            <TextView
                android:id="@+id/textChat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Добрый день. Чем могу быть вам полезен? (платежные поручения и кредиты моя страсть)"
            />


        </ScrollView>


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_below="@id/tvHello"
            android:layout_weight="1"
            android:visibility="gone">

        </WebView>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llsecond"
        android:layout_alignBottom="@id/verL">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eChatSend"
        android:layout_below="@id/verL"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/llhorizont"

        android:orientation="horizontal">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="onClickClear"
            android:text="Call" />

        <Button
            android:id="@+id/bPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/webView"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Press to talk"
            android:visibility="gone"/>


        <Button
            android:id="@+id/bSendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="onbSend"
            android:text="Send" />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
